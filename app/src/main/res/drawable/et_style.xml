<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item  android:state_activated="false" android:state_selected="false">
        <shape>
            <corners android:radius="10dp"/>
            <stroke android:width="1dp" android:color="@color/Neutral_200"/>
            <solid android:color="@color/Neutral_0"/>
        </shape>
    </item>
    <item android:state_activated="true" android:state_selected="false">
        <shape>
            <corners android:radius="10dp"/>
            <stroke android:width="1dp" android:color="@color/Primary_700"/>
            <solid android:color="@color/Neutral_0"/>
        </shape>
    </item>
    <item android:state_selected="true" android:state_activated="true">
        <shape>
            <corners android:radius="10dp"/>
            <stroke android:width="1dp" android:color="@color/Danger_700"/>
            <solid android:color="@color/Neutral_0"/>
        </shape>
    </item>
</selector>