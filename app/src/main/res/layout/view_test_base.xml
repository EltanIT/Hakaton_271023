<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:id="@+id/border1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/Neutral_200"
            app:layout_constraintTop_toTopOf="parent"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/border1"
            app:layout_constraintBottom_toTopOf="@id/border2"
            android:layout_marginVertical="16dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Вопрос 1"
                android:fontFamily="@font/sf_protext_medium"
                android:textSize="16sp"
                android:textColor="#32324D"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Описание"
                    android:fontFamily="@font/sf_protext_semibold"
                    android:textSize="14sp"
                    android:lineHeight="20dp"
                    android:textColor="@color/Neutral_800"
                    />
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/et_style"
                    android:layout_marginTop="12dp"
                    android:padding="16dp"
                    android:hint="Заполните поле"
                    android:textColorHint="@color/Neutral_500"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Баллы"
                    android:fontFamily="@font/sf_protext_semibold"
                    android:textSize="14sp"
                    android:lineHeight="20dp"
                    android:textColor="@color/Neutral_800"
                    />
                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/et_style"
                    android:layout_marginTop="12dp"
                    android:padding="16dp"
                    android:hint="Введите колличество"
                    android:textColorHint="@color/Neutral_500"
                    android:layout_marginEnd="82dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Вариант 1"
                    android:fontFamily="@font/sf_protext_semibold"
                    android:textSize="14sp"
                    android:lineHeight="20dp"
                    android:textColor="@color/Neutral_800"
                    />
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/question_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/et_style"
                    android:layout_marginTop="12dp"
                    android:padding="16dp"
                    android:hint="Заполните поле"
                    android:textColorHint="@color/Neutral_500"
                    android:drawableRight="@drawable/alert_succes_ic"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Вариант 2"
                    android:fontFamily="@font/sf_protext_semibold"
                    android:textSize="14sp"
                    android:lineHeight="20dp"
                    android:textColor="@color/Neutral_800"
                    />
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/question_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/et_style"
                    android:layout_marginTop="12dp"
                    android:padding="16dp"
                    android:hint="Заполните поле"
                    android:textColorHint="@color/Neutral_500"
                    android:drawableRight="@drawable/alert_succes_ic"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Вариант 3"
                    android:fontFamily="@font/sf_protext_semibold"
                    android:textSize="14sp"
                    android:lineHeight="20dp"
                    android:textColor="@color/Neutral_800"
                    />
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/question_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/et_style"
                    android:layout_marginTop="12dp"
                    android:padding="16dp"
                    android:hint="Заполните поле"
                    android:textColorHint="@color/Neutral_500"
                    android:drawableRight="@drawable/alert_succes_ic"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Вариант 4"
                    android:fontFamily="@font/sf_protext_semibold"
                    android:textSize="14sp"
                    android:lineHeight="20dp"
                    android:textColor="@color/Neutral_800"
                    />
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/question_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/et_style"
                    android:layout_marginTop="12dp"
                    android:padding="16dp"
                    android:hint="Заполните поле"
                    android:textColorHint="@color/Neutral_500"
                    android:drawableRight="@drawable/alert_succes_ic"
                    />
            </LinearLayout>
        </LinearLayout>
        <View
            android:id="@+id/border2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/Neutral_200"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>