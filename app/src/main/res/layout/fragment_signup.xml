<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollbars="none"
    android:overScrollMode="never"
    tools:context=".view.fragments.SignUpFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Регистрация портала"
            android:textColor="@color/Primary_700"
            android:textSize="25sp"
            android:lineHeight="40dp"
            android:fontFamily="@font/sf_pro_display_bold"
            android:layout_marginHorizontal="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="42dp"
            app:layout_constraintHorizontal_bias="0"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:showDividers="beginning"
            android:paddingVertical="8dp"
            android:layout_marginHorizontal="32dp"
            app:layout_constraintTop_toBottomOf="@id/txt1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btn_ll"
            android:layout_marginBottom="32dp"
            android:layout_marginTop="42dp"
            >
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/tel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/et_style"
                android:layout_marginTop="16dp"
                android:padding="16dp"
                android:inputType="phone"
                android:hint="Телефон"
                android:textColorHint="@color/Neutral_500"
                />
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/et_style"
                android:layout_marginTop="16dp"
                android:padding="16dp"
                android:hint="Электронная почта"
                android:textColorHint="@color/Neutral_500"
                />
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/inn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/et_style"
                android:layout_marginTop="16dp"
                android:padding="16dp"
                android:hint="ИНН"
                android:textColorHint="@color/Neutral_500"
                />
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/organization_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/et_style"
                android:layout_marginTop="16dp"
                android:padding="16dp"
                android:hint="Название организации"
                android:textColorHint="@color/Neutral_500"
                />
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/et_style"
                android:layout_marginTop="16dp"
                android:padding="16dp"
                android:hint="Адрес организации"
                android:textColorHint="@color/Neutral_500"
                />
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/password_style"
                android:drawableRight="@drawable/eye_slash_ic"
                android:layout_marginTop="16dp"
                android:padding="16dp"
                android:password="true"
                android:hint="Пароль"
                android:textColorHint="@color/Neutral_500"
                />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1.4"
            android:gravity="center"
            android:layout_marginTop="42dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/login"
            android:layout_marginBottom="32dp"
            >
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/signup"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/primary_button_style"
                android:layout_weight="1"
                android:text="Зарегистрироваться"
                android:textColor="@color/Neutral_0"
                style="?android:attr/borderlessButtonStyle"
                android:textAllCaps="false"
                android:textStyle="bold"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Есть аккаунт? Войти"
            android:layout_marginBottom="42dp"
            android:textSize="12sp"
            android:textColor="@color/Primary_500"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>