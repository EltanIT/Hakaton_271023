<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragments.admin_drawers_fragments.AdminAnalyticsFragment">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:layout_marginHorizontal="32dp"
       android:layout_marginTop="28dp"
       >
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:padding="16dp"
           android:background="@drawable/analytics_view_style"
           android:backgroundTint="@color/Primary_200"
           >
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Колличество \nсотрудников"
               android:fontFamily="@font/sf_protext_medium"
               android:textSize="12sp"
               android:lineHeight="16dp"
               android:textColor="@color/Neutral_800"
               android:layout_centerVertical="true"
               android:layout_alignParentLeft="true"
               />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="721К"
               android:textSize="32sp"
               android:lineHeight="40dp"
               android:fontFamily="@font/sf_protext_bold"
               android:textColor="@color/Neutral_800"
               android:layout_centerVertical="true"
               android:layout_alignParentRight="true"
               />
       </RelativeLayout>
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:padding="16dp"
           android:background="@drawable/analytics_view_style"
           android:backgroundTint="@color/Primary_100"
           android:layout_marginTop="16dp"
           >
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Колличество \nсотрудников"
               android:fontFamily="@font/sf_protext_medium"
               android:textSize="12sp"
               android:lineHeight="16dp"
               android:textColor="@color/Neutral_800"
               android:layout_centerVertical="true"
               android:layout_alignParentLeft="true"
               />
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerVertical="true"
               android:layout_alignParentRight="true"
               android:orientation="vertical"

               >
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="87%"
                   android:textSize="32sp"
                   android:lineHeight="40dp"
                   android:fontFamily="@font/sf_protext_bold"
                   android:textColor="@color/Neutral_800"
                   />
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   >
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="+15.03%"
                       android:textSize="12sp"
                       android:lineHeight="18dp"
                       android:fontFamily="@font/sf_protext_regular"
                       android:textColor="@color/Neutral_800"
                       android:layout_gravity="center_vertical"
                       />
                   <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/arrow_rise_ic"
                       android:layout_marginStart="4dp"
                       android:layout_gravity="center_vertical"
                       />
               </LinearLayout>

           </LinearLayout>

       </RelativeLayout>
   </LinearLayout>

</FrameLayout>