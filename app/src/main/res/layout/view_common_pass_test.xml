<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginVertical="22dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="0dp"

    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:id="@+id/border1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/Neutral_200"
            app:layout_constraintTop_toTopOf="parent"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/border1"
            app:layout_constraintBottom_toTopOf="@id/border2"
            android:layout_marginVertical="16dp"
            >
            <TextView
                android:id="@+id/num_q"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Вопрос 1"
                android:fontFamily="@font/sf_protext_medium"
                android:textSize="16sp"
                android:textColor="#32324D"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/question"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Что появилось раньше? "
                    android:fontFamily="@font/sf_protext_regular"
                    android:textSize="14sp"
                    android:lineHeight="20dp"
                    android:textColor="@color/Neutral_800"
                    />
               <RadioGroup
                   android:id="@+id/radio_group"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <RadioButton
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Яйцо"
                       android:fontFamily="@font/sf_protext_regular"
                       android:textColor="#32324D"
                       android:textSize="14sp"
                       android:lineHeight="20dp"
                       />
                   <RadioButton
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                        android:text="Яйцо"
                       android:fontFamily="@font/sf_protext_regular"
                       android:textColor="#32324D"
                       android:textSize="14sp"
                       android:lineHeight="20dp"
                       />
                   <RadioButton
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Яйцо"
                       android:fontFamily="@font/sf_protext_regular"
                       android:textColor="#32324D"
                       android:textSize="14sp"
                       android:lineHeight="20dp"
                       />
                   <RadioButton
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Яйцо"
                       android:fontFamily="@font/sf_protext_regular"
                       android:textColor="#32324D"
                       android:textSize="14sp"
                       android:lineHeight="20dp"
                       />
               </RadioGroup>
            </LinearLayout>

        </LinearLayout>
        <View
            android:id="@+id/border2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/Neutral_200"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>