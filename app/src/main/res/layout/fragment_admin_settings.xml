<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollbars="none"
    android:overScrollMode="never"
    tools:context=".view.fragments.admin_drawers_fragments.AdminSettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="32dp"
        >
        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Администраторы"
            android:fontFamily="@font/sf_protext_bold"
            android:textSize="20sp"
            android:textColor="@color/Neutral_800"
            android:layout_marginHorizontal="32dp"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="32dp"
            android:layout_marginHorizontal="32dp"
            android:padding="2dp"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardCornerRadius="250dp"
                app:cardElevation="1dp"
                android:backgroundTint="@color/Neutral_100"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/avatar_ic"
                    />
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="16dp"
                >
                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Фамилия Имя Отчество"
                    android:fontFamily="@font/sf_protext_medium"
                    android:textSize="14sp"
                    android:lineHeight="20dp"
                    android:textColor="@color/Neutral_800"
                    />
                <TextView
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="vita@gmail.com"
                    android:fontFamily="@font/sf_protext_regular"
                    android:textSize="14sp"
                    android:lineHeight="20dp"
                    android:textColor="#999999"
                    android:layout_marginTop="4dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|end"
                >
                <ImageView
                    android:id="@+id/redact_ic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/pencil_grey"
                    />
                <ImageView
                    android:id="@+id/delete_ic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/delete_ic"
                    android:layout_marginStart="32dp"
                    />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:paddingVertical="16dp"
            android:background="@color/Primary_100"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="32dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/plus_circle_ic"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Добавить администратора"
                    android:fontFamily="@font/sf_protext_bold"
                    android:textSize="12sp"
                    android:lineHeight="16dp"
                    android:textColor="#4945FF"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="16dp"
                    />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="32dp"
            >
            <TextView
                android:id="@+id/txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Тарифы"
                android:fontFamily="@font/sf_protext_bold"
                android:textSize="20sp"
                android:textColor="@color/Neutral_800"
                android:layout_marginTop="32dp"

                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Сменить тариф"
                    android:fontFamily="@font/sf_protext_bold"
                    android:textSize="14sp"
                    android:lineHeight="20dp"
                    android:textColor="@color/Neutral_800"
                    />
                <Spinner
                    android:id="@+id/rate_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/et_style"
                    android:layout_marginTop="12dp"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="32dp"
            >
            <TextView
                android:id="@+id/txt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Техническая документация"
                android:fontFamily="@font/sf_protext_bold"
                android:textSize="20sp"
                android:textColor="@color/Neutral_800"
                android:layout_marginTop="32dp"

                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical">
              <androidx.appcompat.widget.AppCompatButton
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:background="@drawable/secondary_button_style"
                  android:text="Скачать"
                  android:textColor="@color/Primary_700"
                  android:fontFamily="@font/sf_protext_bold"
                  android:textSize="14sp"
                  android:lineHeight="16dp"
                  android:textAllCaps="false"
                  android:paddingHorizontal="42dp"
                  style="?android:attr/borderlessButtonStyle"
                  />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="32dp"
            >
            <TextView
                android:id="@+id/txt4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Связь с поддержкой"
                android:fontFamily="@font/sf_protext_bold"
                android:textSize="20sp"
                android:textColor="@color/Neutral_800"
                android:layout_marginTop="32dp"

                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Тема обращения"
                    android:fontFamily="@font/sf_protext_bold"
                    android:textSize="14sp"
                    android:lineHeight="20dp"
                    android:textColor="@color/Neutral_800"
                    />
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/name_support"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/et_style"
                    android:layout_marginTop="12dp"
                    android:padding="16dp"
                    android:hint="Заполните поле"
                    android:textColorHint="@color/Neutral_500"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Вопрос"
                    android:fontFamily="@font/sf_protext_bold"
                    android:textSize="14sp"
                    android:lineHeight="20dp"
                    android:textColor="@color/Neutral_800"
                    />
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/description_support"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/et_style"
                    android:layout_marginTop="12dp"
                    android:padding="16dp"
                    android:hint="Введите текст"
                    android:textColorHint="@color/Neutral_500"
                    android:gravity="top"
                    android:minHeight="100dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>