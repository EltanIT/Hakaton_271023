<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragments.common_drawers_fragmnets.CommonMyApplicationAddFragment">

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Связваться с HR"
        android:fontFamily="@font/sf_protext_bold"
        android:textSize="20sp"
        android:textColor="@color/Neutral_800"
        android:layout_marginTop="32dp"
        android:layout_marginStart="32dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        />

    <LinearLayout
        app:layout_constraintTop_toBottomOf="@id/txt1"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Тема обращения"
                android:fontFamily="@font/sf_protext_semibold"
                android:textSize="14sp"
                android:lineHeight="20dp"
                android:textColor="@color/Neutral_800"
                />
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/et_style"
                android:layout_marginTop="12dp"
                android:padding="16dp"
                android:hint="Заполните поле"
                android:textColorHint="@color/Neutral_500"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Вопрос"
                android:fontFamily="@font/sf_protext_semibold"
                android:textSize="14sp"
                android:lineHeight="20dp"
                android:textColor="@color/Neutral_800"
                />
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/et_style"
                android:layout_marginTop="12dp"
                android:padding="16dp"
                android:hint="Введите текст"
                android:textColorHint="@color/Neutral_500"

                android:minHeight="100dp"
                android:maxHeight="200dp"
                android:gravity="top|start"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            >
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Отправить"
                android:background="@drawable/primary_button_style"
                android:backgroundTint="@color/Primary_600"
                android:textColor="@color/Neutral_0"
                android:paddingHorizontal="32dp"
                android:layout_marginTop="28dp"
                android:textAllCaps="false"
                style="?android:attr/borderlessButtonStyle"
                android:fontFamily="@font/sf_protext_bold"
                android:textSize="14sp"
                android:lineHeight="16dp"
                android:layout_weight="1"


                />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>